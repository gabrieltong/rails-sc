<%- model_class = Room -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <td><strong><%= model_class.human_attribute_name(:title) %>:</strong></td>
    <td><%= @room.title %></dd>
  </tr>   
  <tr>
    <td><strong><%= model_class.human_attribute_name(:projector) %>:</strong></td>
    <td><%= sf @room.projector %></dd>
  </tr>   
  <tr>
    <td><strong><%= model_class.human_attribute_name(:sound) %>:</strong></td>
    <td><%= sf @room.sound %></dd>
  </tr>   
  <tr>
    <td><strong><%= model_class.human_attribute_name(:mic) %>:</strong></td>
    <td><%= sf @room.mic %></dd>
  </tr>   
  <tr>
    <td><strong><%= model_class.human_attribute_name(:laser) %>:</strong></td>
    <td><%= sf @room.laser %></dd>
  </tr>   
  <tr>
    <td><strong><%= model_class.human_attribute_name(:network) %>:</strong></td>
    <td><%= sf @room.network %></dd>
  </tr>   
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rooms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_room_path(@room), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              room_path(@room),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
