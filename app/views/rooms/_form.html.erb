<%= form_for @room, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :projector, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :projector, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sound, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sound, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mic, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :mic, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :laser, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :laser, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn' %>
  </div>
<% end %>
