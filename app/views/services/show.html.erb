<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class='table table-bordered table-striped'>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:title) %>:</strong></td>
    <td><%= @service.title %></td>
  </tr>  
  <tr>
    <td><strong><%= model_class.human_attribute_name(:capacity) %>:</strong></td>
    <td><%= @service.capacity %></td>
  </tr>  
  <tr>
    <td><strong><%= model_class.human_attribute_name(:menu) %>:</strong></td>
    <td><%= @service.menu %></td>
  </tr>  
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              services_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_service_path(@service), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              service_path(@service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
