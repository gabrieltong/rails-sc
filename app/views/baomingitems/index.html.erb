<%- model_class = Baomingitem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:baoming_id) %></th>
      <th><%= model_class.human_attribute_name(:free) %></th>
      <th><%= model_class.human_attribute_name(:klass_id) %></th>
      <th><%= model_class.human_attribute_name(:end_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @baomingitems.each do |baomingitem| %>
      <tr>
        <td><%= link_to baomingitem.id, baomingitem_path(baomingitem) %></td>
        <td><%= baomingitem.baoming_id %></td>
        <td><%= baomingitem.free %></td>
        <td><%= baomingitem.klass_id %></td>
        <td><%= baomingitem.end_at %></td>
        <td><%=l baomingitem.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_baomingitem_path(baomingitem), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      baomingitem_path(baomingitem),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_baomingitem_path,
            :class => 'btn btn-primary' %>
