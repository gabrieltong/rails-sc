<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:qq) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:home_51) %></th>
      <th><%= model_class.human_attribute_name(:home_101) %></th>
      <th><%= model_class.human_attribute_name(:home_summer) %></th>
      <th><%= model_class.human_attribute_name(:exam_4) %></th>
      <th><%= model_class.human_attribute_name(:exam_6) %></th>
      <th><%= model_class.human_attribute_name(:exam_toefl) %></th>
      <th><%= model_class.human_attribute_name(:exam_qimo) %></th>
      <th><%= model_class.human_attribute_name(:guide) %></th>
      <th><%= model_class.human_attribute_name(:guide_vip) %></th>
      <th><%= model_class.human_attribute_name(:logic) %></th>
      <th><%= model_class.human_attribute_name(:alumnus) %></th>
      <th><%= model_class.human_attribute_name(:finished) %></th>
      <th><%= model_class.human_attribute_name(:school_id) %></th>
      <th><%= model_class.human_attribute_name(:major_id) %></th>
      <th><%= model_class.human_attribute_name(:grade) %></th>
      <th><%= model_class.human_attribute_name(:signup_openclass) %></th>
      <th><%= model_class.human_attribute_name(:sex) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.id, person_path(person) %></td>
        <td><%= person.username %></td>
        <td><%= person.phone %></td>
        <td><%= person.qq %></td>
        <td><%= person.state %></td>
        <td><%= person.home_51 %></td>
        <td><%= person.home_101 %></td>
        <td><%= person.home_summer %></td>
        <td><%= person.exam_4 %></td>
        <td><%= person.exam_6 %></td>
        <td><%= person.exam_toefl %></td>
        <td><%= person.exam_qimo %></td>
        <td><%= person.guide %></td>
        <td><%= person.guide_vip %></td>
        <td><%= person.logic %></td>
        <td><%= person.alumnus %></td>
        <td><%= person.finished %></td>
        <td><%= person.school_id %></td>
        <td><%= person.major_id %></td>
        <td><%= person.grade %></td>
        <td><%= person.signup_openclass %></td>
        <td><%= person.sex %></td>
        <td><%=l person.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_person_path(person), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      person_path(person),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_person_path,
            :class => 'btn btn-primary' %>
