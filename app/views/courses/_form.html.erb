<%= form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :menu, :class => 'control-label' %>
    <div class="controls">
      <%Course::Menu.each do |choice|%>
      <label class="radio inline">
      <%= f.radio_button :menu, choice%><%=choice%>
      </label>
      <%end%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :projector, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :projector, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sound, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sound, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mic, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :mic, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :network, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :network, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :laser, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :laser, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :chaban, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :chaban, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :video_makeup, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :video_makeup, :class => 'check_box' %>
    </div>
  </div>  
  <div class="control-group">
    <%= f.label :capacity, :class => 'control-label' %>
    <div class="controls">
      <%Course::Capacity.each do |choice|%>
      <label class="radio inline">
      <%= f.radio_button :capacity, choice%><%=choice%>
      </label>
      <%end%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :duration, :class => 'control-label' %>
    <div class="controls">
      <%Course::Duration.each do |choice|%>
