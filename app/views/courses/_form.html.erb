  </div>
  <div class="control-group">
    <%= f.label :style, :class => 'control-label' %>
    <div class="controls">
      <%Course::Style.each do |choice|%>
      <label class="radio inline">
      <%= f.radio_button :style, choice%><%=choice%>
      </label>
      <%end%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kind, :class => 'control-label' %>
    <div class="controls">
      <%Course::Kind.each do |choice|%>
      <label class="radio inline">
      <%= f.radio_button :kind, choice%><%=choice%>
      </label>
      <%end%>
    </div>
  </div>  
  <div class="control-group">
    <%= f.label :frequency, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :frequency, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cycle, :class => 'control-label' %>
    <div class="controls">
