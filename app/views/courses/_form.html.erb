    </div>
  </div>
  <div class="control-group">
    <%= f.label :section, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :section, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :score, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remark, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :remark, :class => 'text_area',:rows=>5 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tools, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :tools, :class => 'text_area',:rows=>5 %>
    </div>
  </div>
