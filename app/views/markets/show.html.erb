<div class='container'>
  <%- model_class = Market -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @market.title %></dd>
  </dl>
  <table class='table table-striped table-bordered'>
    <tr>
      <th><%= Person.human_attribute_name(:id) %></th>
      <th><%= Person.human_attribute_name(:username) %></th>
      <th><%= Person.human_attribute_name(:phone) %></th>
      <th>学校</th>
      <th>院系</th>
      <th>专业</th>
      <th>年级</th>
      <th>参与方式</th>
      <th>是否报名公开课</th>
      <th><%= Person.human_attribute_name(:created_at) %></th>
    </tr>
    <%@market.people.each do |person|%>
    <tr>
      <td><%=person.id%></td>
      <td><%=person.username%></td>
      <td><%=person.phone%></td>
      <td><%=person.school.try(:title)%></td>
      <td><%=person.college.try(:title)%></td>
      <td><%=person.major.try(:title)%></td>
      <td><%=person.grade%></td>
      <td><%=''%></td>
      <td><%=person.signup_openclass%></td>
      <td><%=person.created_at%></td>
    </tr>
    <%end%>

  </table>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                markets_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_market_path(@market), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                market_path(@market),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>