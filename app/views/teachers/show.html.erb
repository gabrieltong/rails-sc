<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <td><strong><%= model_class.human_attribute_name(:username) %>:</strong></td>
    <td><%= @teacher.username %></td>
  </tr>  
  <tr>
    <td><strong><%= model_class.human_attribute_name(:phone) %>:</strong></td>
    <td><%= @teacher.phone %></td>
  </tr>  
  <tr>
    <td><strong><%= model_class.human_attribute_name(:qq) %>:</strong></td>
    <td><%= @teacher.qq %></td>
  </tr>  
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teachers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_teacher_path(@teacher), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              teacher_path(@teacher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
