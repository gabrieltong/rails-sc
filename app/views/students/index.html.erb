<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:qq) %></th>
      <th><%= model_class.human_attribute_name(:sex) %></th>
      <th><%= model_class.human_attribute_name(:school) %></th>
      <th><%= model_class.human_attribute_name(:college) %></th>
      <th><%= model_class.human_attribute_name(:major) %></th>
      <th><%= model_class.human_attribute_name(:grade) %></th>
      <th><%= model_class.human_attribute_name(:home_51) %></th>
      <th><%= model_class.human_attribute_name(:home_101) %></th>
      <th><%= model_class.human_attribute_name(:home_summer) %></th>
      <th><%= model_class.human_attribute_name(:exam_4) %></th>
      <th><%= model_class.human_attribute_name(:exam_6) %></th>
      <th><%= model_class.human_attribute_name(:exam_toefl) %></th>
      <th><%= model_class.human_attribute_name(:exam_qimo) %></th>
      <th><%= model_class.human_attribute_name(:guide) %></th>
      <th><%= model_class.human_attribute_name(:guide_vip) %></th>
      <th><%= model_class.human_attribute_name(:logic) %></th>
      <th><%= model_class.human_attribute_name(:alumnus) %></th>
      <th><%= model_class.human_attribute_name(:finished) %></th>
      
      <th><%= model_class.human_attribute_name(:signup_openclass) %></th>
      
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.id, student_path(student) %></td>
        <td><%= student.username %></td>
        <td><%= student.phone %></td>
        <td><%= student.qq %></td>
        <td><%= student.sex %></td>
        <td><%= student.school.title %></td>
        <td><%= student.college.title %></td>
        <td><%= student.major.title %></td>
        <td><%= student.grade %></td>
        <td><%= sf student.home_51 %></td>
        <td><%= sf student.home_101 %></td>
        <td><%= sf student.home_summer %></td>
        <td><%= sf student.exam_4 %></td>
        <td><%= sf student.exam_6 %></td>
        <td><%= sf student.exam_toefl %></td>
        <td><%= sf student.exam_qimo %></td>
        <td><%= sf student.guide %></td>
        <td><%= sf student.guide_vip %></td>
        <td><%= sf student.logic %></td>
        <td><%= sf student.alumnus %></td>
        <td><%= sf student.finished %></td>
        
        <td><%= sf student.signup_openclass %></td>
        <td><%=l student.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_path(student), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_path(student),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_path,
            :class => 'btn btn-primary' %>
